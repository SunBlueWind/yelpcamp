<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Welcome to YelpCamp</h1>
            <p>View our top Campgrounds in the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap">
        <% if (noMatch) { %>
            <div class="col-md-12">
                <h3>No Match for the Searched Campground. Please Try Again.</h3>
                <div class="form-inline">
                    <form action="/campgrounds" method="GET">
                        <div class="form-group">
                            <input class="form-control" type="text" name="search" placeholder="Search Campgrounds">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default btn-md btn-block">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        <% } %>
        <% campgrounds.forEach(function(campground) { %>
            <div class="col col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <div>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>