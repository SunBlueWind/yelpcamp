<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= user.username %>'s Profile</h1>
        
        <div class="form-block">
            <form action="/user/<%= user.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" value="<%= user.username %>" readonly>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="passwordConfirm" placeholder="confirm your password" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email" value="<%= user.email %>" placeholder="email" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="avatar" value="<%= user.avatar %>" placeholder="avatar url (optional)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="adminCode" placeholder="admin code">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Update</button>
                </div>
            </form>
            <a class="btn btn-default" href="/user/<%= user.id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>